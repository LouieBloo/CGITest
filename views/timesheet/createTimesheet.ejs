<%- include('../header'); %>

<div class="row">
	<div class="col-md mb-2">
		<h2>Create a new timesheet</h2>
	</div>
</div>

<div class="row">

	<div id="lineItems" class="col-md-12 mt-4">
		<form method="post" id="timesheetForm">
			<div class="form-row mb-4">
				<div class="col">
					<label for="rate">Rate:</label>
					<input type="number" name="rate">
				</div>
			</div>
			
			<div class="form-row">
				<h4>Line Items: <span class="addBtn" onclick="addLineItem();">+add</span></h4>
			</div>

			<%- include('../components/lineItem'); %>
			<%- include('../components/lineItem'); %>

			<div class="form-row mt-4">
				<div class="col">
					<textarea name="comment" rows="4" cols="35" placeholder="Description"></textarea>
				</div>
			</div>
			<div class="form-row mt-4">
				<div class="col">
					<input type="submit" class="mt-4 btn btn-success" value="Create">
				</div>
			</div>

		</form>
	</div>

</div>





<script src="/javascripts/timesheet/createTimesheet.js"></script>

<%- include('../footer'); %>
